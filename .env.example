# Spiralmem Configuration Environment Variables

# Database
SPIRALMEM_DB_PATH=./data/spiralmem.db

# Embedding Model
SPIRALMEM_EMBEDDING_MODEL=all-MiniLM-L6-v2
SPIRALMEM_DEVICE=cpu

# Server Configuration
SPIRALMEM_MCP_ENABLED=true
SPIRALMEM_API_ENABLED=false
SPIRALMEM_API_PORT=3000

# Logging
SPIRALMEM_LOG_LEVEL=info

# Video Processing
SPIRALMEM_VIDEO_TEMP_DIR=./data/temp
SPIRALMEM_VIDEO_MAX_CONCURRENT=2

# Development
NODE_ENV=development