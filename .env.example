# Spiralmem Environment Configuration
# Copy this file to .env and configure with your actual values

# YouTube Data API v3 Key (optional - only needed for advanced YouTube features)
# Get from: https://console.developers.google.com/apis/credentials
YOUTUBE_API_KEY=your_youtube_api_key_here

# Database Configuration
SPIRALMEM_DB_PATH=./data/spiralmem.db

# Logging Configuration
SPIRALMEM_LOG_LEVEL=info

# MCP Server Configuration
SPIRALMEM_MCP_ENABLED=true

# API Server Configuration (disabled by default)
SPIRALMEM_API_ENABLED=false
SPIRALMEM_API_PORT=3000
EOF < /dev/null
